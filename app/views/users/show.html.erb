<div class="container">
	<div class="col-12 profile_head">
		<table cellpadding="5" style="width:100%;">
			<tr>
				<th rowspan="2" style="width:20%"><%= attachment_image_tag @user, :image, :fill, 75, 75, format: 'jpeg', fallback: "no_image.png", size:'75x75', class: "profile_image" %>
				</th>
				<td style="width:25%">
					<%= @user.name %>
				</td>
				<td style="width:25%">
					<%= @user.email %>
				</td>
				<td style="width:30%">
					<%= link_to "アカウント管理", edit_user_path, class: "btn btn-info btn-block" %>
				</td>
			</tr>
		</table>
	</div>

	<div class="row">
		<div class="col-3 card">

		</div>

		<div class="col-9">
			<div>
				<% @user.idea_boards.each do |idea| %>
					<%= link_to idea_board_path(idea) do %>
						<div class="card idea_box shadow-sm" style="width:100%;">
							<div class="card-head box-head">
								<div class="row">
									<div class="col-3">
										<div class="text-center">
											<%= attachment_image_tag @user, :image, :fill, 75, 75, format: 'jpeg', fallback: "no_image.png", size:'75x75', class: "profile_image" %>
										</div>
										<div>
											<h5 class="text-center"><%= @user.name %></h5>
										</div>
									</div>
									<div class="col-7">
										<span class="label label-primary"><%= idea.tag_list %></span>
									</div>
								</div>
							</div>
							<div class="card-body">
								<h5><%= idea.head %></h5>
							</div>
							<div class="card-body">
								<%= idea.body %>
							</div>
						</div>
					<% end %>
				<% end %>
				<%= paginate @idea_boards %>
			</div>
		</div>
	</div>
</div>