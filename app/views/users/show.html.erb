<div class="container" style="margin-top: 20px;">
	<div class="row">
		<div class="col-3">

			<div class="card card-body shadow-sm" style="margin-bottom:20px;">
				<div>
					<table style="width:100%;">
						<tr>
							<td class="text-center" rowspan="2" style="width:20%;">
								<%= attachment_image_tag @user, :image, :fill, 75, 75, format: 'jpeg', fallback: "no_image.png", size:'75x75', class: "profile_image" %>
							</td>
							<td style="width:80%;">
								<%= @user.name %>
							</td>
						</tr>
						<tr>
							<td>
								<%= @user.email %>
							</td>
						</tr>
						<tr>
							<td>
								<%= @user.profile %>
							</td>
						</tr>
						<tr>
							<td>
								<%= link_to "お気に入り", favorites_path %>
							</td>
						</tr>
						<tr>
							<td class="text-center" colspan="2">
								<%= link_to "プロフィールを編集する", edit_user_path(current_user), class: "btn btn-success bnt-block" %>
							</td>
						</tr>
					</table>
				</div>
			</div>

			<%= render 'layouts/sidebar_new' %>

		</div>

		<div class="col-9">
			<div>
				<% @user.idea_boards.each do |idea| %>
					<div class="card idea_box shadow-sm col-12">
						<div class="card-head box-head">
							<table style="width: 100%;">
								<tr>
									<td rowspan="2" style="width: 20%;">
										<%= attachment_image_tag @user, :image, :fill, 75, 75, format: 'jpeg', fallback: "no_image.png", size:'75x75', class: "profile_image" %>
									</td>
									<td style="width: 60%;">
										<%= @user.name %>
									</td>
									<td style="width: 10%;">
										<%= link_to "編集", edit_idea_board_path(idea), class: "btn btn-success" %>
									</td>
									<td style="width: 10%;">
										<%= link_to "削除", idea_board_path(idea), method: :delete, class: "btn btn-danger" %>
									</td>
								</tr>
								<tr>
									<td>
										<span class="badge badge-primary"><%= raw idea.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
										</span>
									</td>
								</tr>
							</table>
						</div>
						<div class="card-body">
							<%= link_to idea_board_path(idea) do %>
								<h5><%= idea.head %></h5>
							<% end %>
						</div>
						<div class="card-body">
							<%= idea.body %>
						</div>
					</div>
				<% end %>
				<%= paginate @idea_boards %>
			</div>
		</div>
	</div>
</div>