<div class="container" style="margin-top: 20px;">
	<div class="row">

		<div class="col-3">
			<%= render 'layouts/sidebar_new' %>
		</div>

		<div class="col-9">
			<div class="card card-border">
				<div class="card text-center card-header">
					<h3 class="text-white">投稿一覧</h3>
				</div>
				<table>
					<% @anotherEntries.each do |e| %>
						<tr>
							<td class="text-center" style="width:20%">
								<%= attachment_image_tag e.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.png", size:'50x50', class: "profile_image" %>
							</td>
							<td class="col-9" style="width:80%">
								<%= link_to room_path(e.room.id) do %>
						    		<%= e.user.name %>さんとのチャット
					    		<% end %>
						    </td>
						</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>