<div class="container">
	<div class="row">
		<% @genres.each do |genre| %>
		    <div class="col-3">
	    		<%= link_to genre_path(genre.id) do %>
					<h5 class="text-center genre-head card card-head">
						<%= genre.genre_symbol %>
					</h5>
				<% end %>
					<% genre.idea_boards.each_with_index do |idea, i| %>
						<div class="card new-box shadow-sm">
							<div class="card-head box-head">
								<table>
									<tr>
										<td rowspan="2">
											<%= attachment_image_tag idea.user, :image, :fill, 75, 75, format: 'jpeg', fallback: "no_image.png", size:'75x75', class: "profile_image" %>
										</td>
										<td>
											<%= idea.user.name %>
										</td>
									</tr>
									<tr>
										<td>
											<span class="badge badge-primary"><%= idea.tag_list %></span>
										</td>
									</tr>
								</table>
							</div>
							<div class="card-body">
								<%= link_to idea_board_path(idea) do %>
									<h5><%= idea.head %></h5>
								<% end %>
							</div>
							<div class="card-body">
								<%= idea.body %>
							</div>
						</div>
					<% break if i == 4 %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>



