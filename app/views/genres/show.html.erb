<div class="container" style="margin-top: 20px;">
	<div class="genre-head" style="margin-bottom:20px;">
		<h3 class="text-center">
			<%= @genre.genre_symbol %>
		</h3>
	</div>
	<div class="row">
		<div class="col-lg-3 d-none d-lg-block">

			<%= render 'layouts/sidebar_new' %>

		</div>
		<div class="col-lg-9 col-12">
			<div>
				<div>
					<% @idea_boards.each do |idea| %>
						<div class="card card-body box shadow-sm col-12">
							<table style="width: 100%">
								<tr>
									<td class="text-center" rowspan="2" style="width: 20%">
										<%= attachment_image_tag idea.user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.png", size:'100x100', class: "profile_image img-fluid" %>
									</td>
									<td style="width: 60%">
										<%= link_to user_path(idea.user) do %>
											<h5><%= idea.user.name %></h5>
										<% end %>
									</td>
									<td style="width: 20%">
										<%= render 'favorites/like_button', idea_board: idea %>
									</td>
								</tr>
								<tr>
									<td>
										<span class="tag-box"><%= raw idea.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
										</span>
									</td>
								</tr>
							</table>
							<div class="ml-2 mt-3">
								<%= link_to idea_board_path(idea) do %>
									<h5><%= idea.head %></h5>
								<% end %>
							</div>
							<div class="card box-color text-box overflow-auto m-2 p-2">
								<%= idea.body %>
							</div>
						</div>
					<% end %>
					<%= paginate @idea_boards %>
				</div>
			</div>
		</div>
		<div class="col-3">
		</div>
	</div>
</div>