<div class="container" style="margin-top: 20px;">
	<h3 class="text-center" style="margin-bottom:20px;">
		<%= @genre.genre_symbol %>
	</h3>
	<div class="row">
		<div class="col-3">

			<%= render 'layouts/sidebar_new' %>

		</div>
		<div class="col-9">
			<div class="col-12">
				<div>
					<% @idea_boards.each do |idea| %>
						<%= link_to idea_board_path(idea) do %>
							<div class="card idea_box shadow-sm col-12">
								<table style="width: 100%">
									<tr>
										<td class="text-center" rowspan="2" style="width: 30%">
											<%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.png", size:'100x100', class: "profile_image" %>
										</td>
										<td>
											<%= idea.user.name %>
										</td>
									</tr>
									<tr>
										<td>
											<span class="badge badge-primary"><%= raw idea.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
											</span>
										</td>
									</tr>
								</table>
								<div class="card-body">
									<h5><%= idea.head %></h5>
								</div>
								<div class="card-body">
									<%= idea.body %>
								</div>
							</div>
						<% end %>
					<% end %>
					<%= paginate @idea_boards %>
				</div>
			</div>
		</div>
		<div class="col-3">
		</div>
	</div>
</div>