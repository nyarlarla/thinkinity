<div class="container" style="margin-top: 20px;">
	<div class="row">
		<div class="col-lg-3 d-none d-lg-block">

			<%= render 'layouts/sidebar_new' %>

		</div>
		<div class="col-lg-9 col-12">
			<div>
				<div class="card card-border pb-5">
					<div class="card text-center card-header">
						<h3 class="text-white">投稿一覧</h3>
					</div>
					<div class="card-body bg-body">
						<% @idea_boards.each do |idea| %>
							<div class="card box shadow" style="width:100%;">
								<div class="card-head box-head">
									<table style="width:100%;">
										<tr>
											<td class="text-center" rowspan="2" style="width:20%;">
												<%= attachment_image_tag idea.user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.png", size:'100x100', class: "profile_image img-fluid" %>
											</td>
											<td style="width:50%;">
												<%= link_to user_path(idea.user) do %>
													<h5><%= idea.user.name %></h5>
												<% end %>
											</td>
											<td style="width:30%">
												<%= render 'favorites/like_button', idea_board: idea %>
											</td>
										</tr>
										<tr>
											<td>
												<span class="tag-box">
													<%= raw idea.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
												</span>
											</td>
										</tr>
									</table>
								</div>
								<div class="ml-2 mt-3">
									<%= link_to idea_board_path(idea) do %>
										<h5><%= idea.head %></h5>
									<% end %>
								</div>
								<div class="card box-color text-box overflow-auto m-2 p-2">
									<%= idea.body %>
								</div>
							</div>
						<% end %>
					</div>
				</div>
				<%= paginate @idea_boards %>
			</div>
		</div>
	</div>
</div>