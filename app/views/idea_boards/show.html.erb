<div class="container">
	<div class="card-body col-12">
		<h3 class="text-center"><%= @idea_board.head %></h3>
	</div>
	<div class="row">
		<div class="col-8">
			<div class="card card-body tag-box shadow-sm">
				<% @idea_board.tag_list.each do |tag| %>
					<span class="label label-primary"><%= tag %></span>
				<% end %>
			</div>
			<div>
				<div>
					<%= attachment_image_tag @idea_board, :image, :fill, 730, 487, format: 'jpeg', class: "img-fluid" %>
				</div>
				<div class="card shadow-sm">
					<div class="card-body">
						<div>
							<%= @idea_board.body %>
						</div>
					</div>
				</div>

				<div class="card">
					<% @idea_board.comments.each do |comment| %>
					<% end %>
				</div>
					<div class="card-head">
					</div>
					<div class="card-body">
						<%= form_for [@idea_board, @comment] do |f| %>
							<table style="width:100%" cellpadding="20">
						      	<tr>
							        <td class="text-center" style="width:20%"><%= attachment_image_tag @idea_board.user, :image, :fill, 75, 75, format: 'jpeg', fallback: "no_image.png", size:'75x75', class: "profile_image" %>
							        </td>
							        <td style="width:80%"><%= f.text_area :text, class: "form-control" %>
							        </td>
						      	</tr>
						      	<tr>
						      		<td class="text-center">
						      			<%= f.submit '登録', class:"btn btn-reg" %>
						      		</td>
						      	</tr>
						     </table>
						<% end %>
					</div>
				</div>
			</div>
			<div class="col-4">
				<table cellpadding="10" style="width:100%">
					<tr>
						<th rowspan="2">
							<div class="text-center">
								<%= attachment_image_tag @idea_board.user, :image, :fill, 75, 75, format: 'jpeg', fallback: "no_image.png", size:'75x75', class: "profile_image" %>
							</div>
						</th>
						<td>
							<%= @idea_board.user.name %>
						</td>
					</tr>
					<tr>
						<td>
							<%= @idea_board.user.email %>
						</td>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>